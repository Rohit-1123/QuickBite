<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.quickbite.controllers.MenuController">
    <top>
        <VBox spacing="10">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="← Back" onAction="#handleBack"/>
                <Label text="Menu" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Category:"/>
                <ComboBox fx:id="categoryFilter" prefWidth="150"/>
                <TextField fx:id="searchField" promptText="Search dishes..." prefWidth="200"/>
                <Button text="Search" onAction="#handleSearch"/>
                <Button text="View Cart" onAction="#handleViewCart" style="-fx-font-weight:bold;"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="menuTable">
            <columns>
                <TableColumn fx:id="nameColumn" text="Item" prefWidth="200"/>
                <TableColumn fx:id="priceColumn" text="Price (₹)" prefWidth="100"/>
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="300"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
